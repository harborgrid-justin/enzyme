{
  "extends": "./tsconfig.json",
  "include": [
    "src/lib/**/*",
    "src/types/**/*",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "src/config/**",
    "**/*.stories.tsx",
    "*.config.ts",
    "src/**/__tests__/**",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false
  }
}
