{
  "name": "enzyme-vscode",
  "displayName": "Enzyme Framework",
  "description": "Enterprise VS Code extension for Enzyme React Framework - Intelligent tooling for modern React development",
  "version": "1.0.0",
  "publisher": "missionfabric",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/harborgrid/enzyme"
  },
  "homepage": "https://enzyme-framework.dev",
  "bugs": {
    "url": "https://github.com/harborgrid/enzyme/issues"
  },
  "qna": "marketplace",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Formatters",
    "Linters",
    "Other"
  ],
  "keywords": [
    "enzyme",
    "react",
    "typescript",
    "framework",
    "enterprise",
    "auth",
    "routing",
    "state-management"
  ],
  "icon": "resources/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "workspaceContains:**/enzyme.config.ts",
    "workspaceContains:**/enzyme.config.js",
    "workspaceContains:**/.enzyme/**",
    "workspaceContains:**/.enzymerc",
    "workspaceContains:**/.enzymerc.json"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "enzyme.init",
        "title": "Initialize Enzyme Project",
        "category": "Enzyme",
        "enablement": "workspaceFolderCount > 0"
      },
      {
        "command": "enzyme.generate.component",
        "title": "Generate Component",
        "category": "Enzyme",
        "enablement": "enzyme:isEnzymeProject"
      },
      {
        "command": "enzyme.generate.feature",
        "title": "Generate Feature",
        "category": "Enzyme",
        "enablement": "enzyme:isEnzymeProject"
      },
      {
        "command": "enzyme.generate.route",
        "title": "Generate Route",
        "category": "Enzyme",
        "enablement": "enzyme:isEnzymeProject"
      },
      {
        "command": "enzyme.generate.store",
        "title": "Generate Zustand Store",
        "category": "Enzyme",
        "enablement": "enzyme:isEnzymeProject"
      },
      {
        "command": "enzyme.generate.hook",
        "title": "Generate Custom Hook",
        "category": "Enzyme",
        "enablement": "enzyme:isEnzymeProject"
      },
      {
        "command": "enzyme.generate.apiClient",
        "title": "Generate API Client",
        "category": "Enzyme",
        "enablement": "enzyme:isEnzymeProject"
      },
      {
        "command": "enzyme.generate.test",
        "title": "Generate Test File",
        "category": "Enzyme",
        "enablement": "enzyme:isEnzymeProject"
      },
      {
        "command": "enzyme.analyze.performance",
        "title": "Analyze Performance",
        "category": "Enzyme",
        "enablement": "enzyme:isEnzymeProject"
      },
      {
        "command": "enzyme.analyze.security",
        "title": "Analyze Security",
        "category": "Enzyme",
        "enablement": "enzyme:isEnzymeProject"
      },
      {
        "command": "enzyme.analyze.dependencies",
        "title": "Analyze Dependencies",
        "category": "Enzyme",
        "enablement": "enzyme:isEnzymeProject"
      },
      {
        "command": "enzyme.refactor.convertToEnzyme",
        "title": "Convert to Enzyme Pattern",
        "category": "Enzyme",
        "enablement": "editorHasSelection && (resourceLangId == typescript || resourceLangId == typescriptreact)"
      },
      {
        "command": "enzyme.refactor.optimizeImports",
        "title": "Optimize Enzyme Imports",
        "category": "Enzyme",
        "enablement": "enzyme:isEnzymeProject && (resourceLangId == typescript || resourceLangId == typescriptreact)"
      },
      {
        "command": "enzyme.validate.config",
        "title": "Validate Enzyme Config",
        "category": "Enzyme",
        "enablement": "enzyme:isEnzymeProject"
      },
      {
        "command": "enzyme.validate.routes",
        "title": "Validate Routes",
        "category": "Enzyme",
        "enablement": "enzyme:isEnzymeProject && enzyme:hasRoutes"
      },
      {
        "command": "enzyme.validate.features",
        "title": "Validate Features",
        "category": "Enzyme",
        "enablement": "enzyme:isEnzymeProject && enzyme:hasFeatures"
      },
      {
        "command": "enzyme.explorer.refresh",
        "title": "Refresh Explorer",
        "category": "Enzyme",
        "icon": "$(refresh)",
        "enablement": "enzyme:isEnzymeProject"
      },
      {
        "command": "enzyme.explorer.openFile",
        "title": "Open File",
        "category": "Enzyme",
        "enablement": "false"
      },
      {
        "command": "enzyme.docs.open",
        "title": "Open Documentation",
        "category": "Enzyme",
        "icon": "$(book)"
      },
      {
        "command": "enzyme.snippets.show",
        "title": "Show Code Snippets",
        "category": "Enzyme",
        "enablement": "enzyme:isEnzymeProject"
      },
      {
        "command": "enzyme.migration.analyze",
        "title": "Analyze Migration from CRA/Next.js",
        "category": "Enzyme",
        "enablement": "workspaceFolderCount > 0"
      },
      {
        "command": "enzyme.telemetry.toggle",
        "title": "Toggle Telemetry",
        "category": "Enzyme"
      },
      {
        "command": "enzyme.debug.showLogs",
        "title": "Show Extension Logs",
        "category": "Enzyme"
      },
      {
        "command": "enzyme.workspace.detect",
        "title": "Detect Enzyme Project",
        "category": "Enzyme",
        "enablement": "workspaceFolderCount > 0"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "enzyme-explorer",
          "title": "Enzyme",
          "icon": "resources/enzyme-icon.svg"
        }
      ]
    },
    "views": {
      "enzyme-explorer": [
        {
          "id": "enzyme.views.features",
          "name": "Features",
          "contextualTitle": "Enzyme Features",
          "when": "enzyme:isEnzymeProject"
        },
        {
          "id": "enzyme.views.routes",
          "name": "Routes",
          "contextualTitle": "Enzyme Routes",
          "when": "enzyme:isEnzymeProject"
        },
        {
          "id": "enzyme.views.components",
          "name": "Components",
          "contextualTitle": "Enzyme Components",
          "when": "enzyme:isEnzymeProject"
        },
        {
          "id": "enzyme.views.stores",
          "name": "State Stores",
          "contextualTitle": "Enzyme State Stores",
          "when": "enzyme:isEnzymeProject"
        },
        {
          "id": "enzyme.views.api",
          "name": "API Clients",
          "contextualTitle": "Enzyme API Clients",
          "when": "enzyme:isEnzymeProject"
        },
        {
          "id": "enzyme.views.performance",
          "name": "Performance",
          "contextualTitle": "Performance Metrics",
          "when": "enzyme:isEnzymeProject"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "enzyme.views.features",
        "contents": "No Enzyme project detected in this workspace.\n[Initialize Enzyme Project](command:enzyme.init)\n[Learn More](https://enzyme-framework.dev)"
      }
    ],
    "configuration": {
      "title": "Enzyme",
      "properties": {
        "enzyme.telemetry.enabled": {
          "type": "boolean",
          "default": false,
          "scope": "application",
          "order": 1,
          "description": "Enable anonymous telemetry to help improve the extension"
        },
        "enzyme.logging.level": {
          "type": "string",
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ],
          "default": "info",
          "scope": "application",
          "order": 2,
          "description": "Logging level for the extension"
        },
        "enzyme.cli.path": {
          "type": "string",
          "default": "enzyme",
          "scope": "application",
          "order": 3,
          "description": "Path to Enzyme CLI executable"
        },
        "enzyme.cli.autoInstall": {
          "type": "boolean",
          "default": true,
          "scope": "application",
          "order": 4,
          "description": "Automatically install Enzyme CLI if not found"
        },
        "enzyme.generator.componentStyle": {
          "type": "string",
          "enum": [
            "function",
            "arrow"
          ],
          "default": "function",
          "scope": "resource",
          "order": 10,
          "description": "Default component style for generator"
        },
        "enzyme.generator.testFramework": {
          "type": "string",
          "enum": [
            "vitest",
            "jest"
          ],
          "default": "vitest",
          "scope": "resource",
          "order": 11,
          "description": "Test framework to use for generated tests"
        },
        "enzyme.generator.cssFramework": {
          "type": "string",
          "enum": [
            "tailwind",
            "css-modules",
            "styled-components",
            "emotion"
          ],
          "default": "tailwind",
          "scope": "resource",
          "order": 12,
          "description": "CSS framework to use for generated components"
        },
        "enzyme.validation.onSave": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 20,
          "description": "Validate Enzyme configuration and routes on save"
        },
        "enzyme.validation.strict": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "order": 21,
          "description": "Enable strict validation mode"
        },
        "enzyme.analysis.autoRun": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 30,
          "description": "Automatically run analysis when files change"
        },
        "enzyme.analysis.onSave": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 31,
          "description": "Run analysis when files are saved"
        },
        "enzyme.analysis.debounceMs": {
          "type": "number",
          "default": 300,
          "minimum": 0,
          "maximum": 5000,
          "scope": "resource",
          "order": 32,
          "description": "Delay before running analysis after changes (milliseconds)"
        },
        "enzyme.diagnostics.enabled": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 40,
          "description": "Show diagnostics in the Problems panel"
        },
        "enzyme.diagnostics.severity": {
          "type": "string",
          "enum": [
            "error",
            "warning",
            "info",
            "hint"
          ],
          "default": "warning",
          "scope": "resource",
          "order": 41,
          "description": "Default severity level for diagnostics"
        },
        "enzyme.diagnostics.showInline": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 42,
          "description": "Show diagnostics inline in the editor"
        },
        "enzyme.codeLens.enabled": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 50,
          "description": "Enable CodeLens information in the editor"
        },
        "enzyme.codeLens.showReferences": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 51,
          "description": "Show reference counts in CodeLens"
        },
        "enzyme.codeLens.showImplementations": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 52,
          "description": "Show implementation counts in CodeLens"
        },
        "enzyme.inlayHints.enabled": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 60,
          "description": "Show inlay hints in the editor"
        },
        "enzyme.inlayHints.showTypes": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 61,
          "description": "Show type inlay hints"
        },
        "enzyme.inlayHints.showParameters": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "order": 62,
          "description": "Show parameter name hints"
        },
        "enzyme.formatting.enabled": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 70,
          "description": "Enable Enzyme formatter"
        },
        "enzyme.formatting.onSave": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "order": 71,
          "description": "Automatically format files on save"
        },
        "enzyme.formatting.prettier": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 72,
          "description": "Use Prettier for formatting"
        },
        "enzyme.completion.enabled": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 80,
          "description": "Enable IntelliSense completions"
        },
        "enzyme.completion.autoImport": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 81,
          "description": "Automatically add imports on completion"
        },
        "enzyme.completion.snippets": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 82,
          "description": "Enable code snippets"
        },
        "enzyme.devServer.port": {
          "type": "number",
          "default": 3000,
          "minimum": 1024,
          "maximum": 65535,
          "scope": "resource",
          "order": 90,
          "description": "Development server port"
        },
        "enzyme.devServer.host": {
          "type": "string",
          "default": "localhost",
          "scope": "resource",
          "order": 91,
          "description": "Development server host"
        },
        "enzyme.devServer.autoStart": {
          "type": "boolean",
          "default": false,
          "scope": "resource",
          "order": 92,
          "description": "Start dev server automatically"
        },
        "enzyme.debug.enabled": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 100,
          "description": "Enable debugging features"
        },
        "enzyme.debug.connectAutomatically": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 101,
          "description": "Automatically connect debugger"
        },
        "enzyme.debug.port": {
          "type": "number",
          "default": 9229,
          "minimum": 1024,
          "maximum": 65535,
          "scope": "resource",
          "order": 102,
          "description": "Port for debugger connection"
        },
        "enzyme.performance.monitoring.enabled": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 110,
          "description": "Enable performance monitoring features"
        },
        "enzyme.performance.caching": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 111,
          "description": "Cache analysis results for better performance"
        },
        "enzyme.performance.maxCacheSize": {
          "type": "number",
          "default": 100,
          "minimum": 1,
          "maximum": 1000,
          "scope": "resource",
          "order": 112,
          "description": "Maximum number of cached items"
        },
        "enzyme.security.scanning.enabled": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 120,
          "description": "Enable security vulnerability scanning"
        },
        "enzyme.imports.autoOptimize": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 130,
          "description": "Automatically optimize Enzyme imports on save"
        },
        "enzyme.snippets.enabled": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 140,
          "description": "Enable Enzyme code snippets"
        },
        "enzyme.codeActions.enabled": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 150,
          "description": "Enable Enzyme code actions and quick fixes"
        },
        "enzyme.explorer.autoRefresh": {
          "type": "boolean",
          "default": true,
          "scope": "window",
          "order": 160,
          "description": "Automatically refresh explorer views on file changes"
        },
        "enzyme.format.onSave": {
          "type": "boolean",
          "default": true,
          "scope": "resource",
          "order": 170,
          "description": "Format Enzyme configuration files on save"
        },
        "enzyme.experimental.features": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "scope": "resource",
          "order": 200,
          "description": "Enable experimental features"
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "when": "enzyme:isEnzymeProject && (resourceLangId == typescript || resourceLangId == typescriptreact)",
          "command": "enzyme.generate.component",
          "group": "enzyme@1"
        },
        {
          "when": "enzyme:isEnzymeProject && (resourceLangId == typescript || resourceLangId == typescriptreact)",
          "command": "enzyme.generate.test",
          "group": "enzyme@2"
        },
        {
          "when": "editorHasSelection && (resourceLangId == typescript || resourceLangId == typescriptreact)",
          "command": "enzyme.refactor.convertToEnzyme",
          "group": "enzyme@3"
        }
      ],
      "explorer/context": [
        {
          "when": "enzyme:isEnzymeProject && explorerResourceIsFolder",
          "command": "enzyme.generate.feature",
          "group": "enzyme@1"
        },
        {
          "when": "enzyme:isEnzymeProject && explorerResourceIsFolder",
          "command": "enzyme.generate.component",
          "group": "enzyme@2"
        }
      ],
      "view/title": [
        {
          "command": "enzyme.explorer.refresh",
          "when": "view =~ /^enzyme\\.views\\./",
          "group": "navigation"
        },
        {
          "command": "enzyme.docs.open",
          "when": "view =~ /^enzyme\\.views\\./",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "enzyme.explorer.openFile",
          "when": "false"
        }
      ]
    },
    "keybindings": [
      {
        "command": "enzyme.generate.component",
        "key": "ctrl+alt+e c",
        "mac": "cmd+alt+e c",
        "when": "editorTextFocus && enzyme:isEnzymeProject"
      },
      {
        "command": "enzyme.generate.feature",
        "key": "ctrl+alt+e f",
        "mac": "cmd+alt+e f",
        "when": "enzyme:isEnzymeProject && (explorerViewletVisible || editorTextFocus)"
      },
      {
        "command": "enzyme.generate.route",
        "key": "ctrl+alt+e r",
        "mac": "cmd+alt+e r",
        "when": "enzyme:isEnzymeProject && (explorerViewletVisible || editorTextFocus)"
      },
      {
        "command": "enzyme.analyze.performance",
        "key": "ctrl+alt+e p",
        "mac": "cmd+alt+e p",
        "when": "editorTextFocus && enzyme:isEnzymeProject"
      }
    ],
    "languages": [
      {
        "id": "enzyme-config",
        "extensions": [
          ".enzyme.ts",
          ".enzyme.js"
        ],
        "aliases": [
          "Enzyme Config"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "enzyme-config",
        "scopeName": "source.ts.enzyme",
        "path": "./syntaxes/enzyme.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "typescript",
        "path": "./snippets/typescript.json"
      },
      {
        "language": "typescriptreact",
        "path": "./snippets/react.json"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "enzyme.config.json",
        "url": "./schemas/enzyme-config.schema.json"
      }
    ],
    "problemMatchers": [
      {
        "name": "enzyme",
        "owner": "enzyme",
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    ],
    "taskDefinitions": [
      {
        "type": "enzyme",
        "required": [
          "task"
        ],
        "properties": {
          "task": {
            "type": "string",
            "description": "The Enzyme task to execute"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy-resources",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:report": "eslint . --format json --output-file eslint-report.json",
    "lint:check": "eslint . --max-warnings 0",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "security": "npm audit --audit-level=moderate",
    "test": "node ./out/test/runTest.js",
    "test:unit": "vitest",
    "package": "vsce package",
    "publish": "vsce publish",
    "copy-resources": "mkdir -p out/resources && cp -r resources/* out/resources/ 2>/dev/null || true",
    "ci": "npm run lint:check && npm run format:check && npm run compile && npm run test",
    "pre-commit": "npm run lint:fix && npm run format"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.22.0",
    "esbuild": "^0.19.10",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^50.8.0",
    "eslint-plugin-prettier": "^5.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^2.0.4",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^15.15.0",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^1.1.0"
  },
  "dependencies": {
    "glob": "^10.3.10",
    "jsonc-parser": "^3.2.0",
    "minimatch": "^9.0.3"
  }
}
