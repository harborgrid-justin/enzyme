{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "enzyme://schemas/enzyme-config.json",
  "title": "Enzyme Configuration",
  "description": "Configuration schema for Enzyme Framework projects",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Project name"
    },
    "version": {
      "type": "string",
      "description": "Project version",
      "pattern": "^\\d+\\.\\d+\\.\\d+(-[a-zA-Z0-9]+)?$"
    },
    "features": {
      "type": "object",
      "description": "Feature configuration",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "source": {
          "type": "string",
          "default": "src/features"
        }
      }
    },
    "routing": {
      "type": "object",
      "description": "Routing configuration",
      "properties": {
        "basePath": {
          "type": "string",
          "default": "/"
        },
        "historyMode": {
          "type": "string",
          "enum": ["browser", "hash", "memory"],
          "default": "browser"
        }
      }
    },
    "auth": {
      "type": "object",
      "description": "Authentication configuration",
      "properties": {
        "provider": {
          "type": "string",
          "enum": ["jwt", "oauth", "session", "custom"]
        },
        "tokenKey": {
          "type": "string",
          "default": "auth_token"
        },
        "refreshKey": {
          "type": "string",
          "default": "refresh_token"
        }
      }
    },
    "api": {
      "type": "object",
      "description": "API configuration",
      "properties": {
        "baseUrl": {
          "type": "string",
          "format": "uri"
        },
        "timeout": {
          "type": "number",
          "default": 30000
        },
        "retryCount": {
          "type": "number",
          "default": 3
        }
      }
    },
    "devServer": {
      "type": "object",
      "description": "Development server configuration",
      "properties": {
        "port": {
          "type": "number",
          "default": 3000,
          "minimum": 1024,
          "maximum": 65535
        },
        "host": {
          "type": "string",
          "default": "localhost"
        }
      }
    },
    "build": {
      "type": "object",
      "description": "Build configuration",
      "properties": {
        "outDir": {
          "type": "string",
          "default": "dist"
        },
        "sourcemap": {
          "oneOf": [
            { "type": "boolean" },
            { "type": "string", "enum": ["inline", "hidden"] }
          ],
          "default": true
        },
        "minify": {
          "type": "boolean",
          "default": true
        }
      }
    }
  },
  "additionalProperties": true
}
